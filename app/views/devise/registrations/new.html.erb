<div class="container">
  <div class="row">
    <%= devise_error_messages! %>
    <div class="col-md-4 col-md-offset-4">
      <div class="panel">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <h2 class="form-heading">Sign up</h2>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address", required: true %>
          <%= f.text_field :name, class: "form-control", placeholder: "Name", required: true %>
          <%= f.password_field :password, class: "form-control signup-password", placeholder: "Password", required: true %>
          <%= f.password_field :password_confirmation, class: "form-control signup-password-confirmation", placeholder: "Password Again", required: true %>
          <div><%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %></div>
        <% end %>
        <div class="new_hacker">
          <div class="shared-links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
