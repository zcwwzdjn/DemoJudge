<div class="container">
  <div class="row">
    <%= devise_error_messages! %>
    <div class="col-md-6 col-md-offset-3">
      <div class="panel">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <h2 class="form-heading">Forgot your password?</h2>
          <%= f.email_field :email, autofocus: true, class: "form-control only-email", placeholder: "Email Address", required: true %>
          <div><%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %></div>
        <% end %>
        <div class="new_hacker">
          <div class="shared-links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>